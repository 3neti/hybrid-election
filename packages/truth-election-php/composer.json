{
    "name": "lbhurtado/truth-election-php",
    "description": "TRUTH Election: Ballot data structures and election logic (no database required).",
    "type": "library",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "TruthElection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TruthElection\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "spatie/laravel-data": "^4.0",
        "lorisleiva/laravel-actions": "^2.9"
    },
    "require-dev": {
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.8"
    },
    "extra": {
        "laravel": {
            "providers": [
                "TruthElection\\TruthElectionServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
